<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
<SearchField search="searchEmployee"/>
<Table id="employeeTable" items="{employee>/data}">
              <headerToolbar>
                <Toolbar>
                    <Title text="Employees"/>
                    <ToolbarSpacer/>
                    <Button icon="sap-icon://settings" press="openSettings"/>
                </Toolbar>
              </headerToolbar>
              <columns>
                <Column>
                  <Label text="Name"/>
                </Column>
                <Column>
                  <Label text="Age"/>
                </Column>
                <Column>
                  <Label text="Score"/>
                </Column>
              </columns>
              <items>
                <ColumnListItem>
                  <Text text="{parts:[{path:'employee>firstName'},{path:'employee>lastName'}],formatter:'.formatName'}"/>
                  <Text text="{employee>age}"/>
                  <ObjectStatus text="{employee>score}" state="{path:'employee>score',formatter:'.formatScoreState'}"/>
                </ColumnListItem>
              </items>
            </Table>
</core:FragmentDefinition>
